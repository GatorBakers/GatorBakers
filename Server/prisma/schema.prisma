generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Account_Status {
  USER
  VENDOR
  ADMIN
}

enum Listing_Status {
  AVAILABLE
  PENDING
  SOLD
}

